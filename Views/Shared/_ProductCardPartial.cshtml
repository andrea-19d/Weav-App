@model ProductModel

<div class="card">
    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.ProductName">
    <div class="card-body text-center">
        <h5 class="card-title">@Model.ProductName</h5>
        <p class="card-text">$@Model.ProductPrice</p>
        <form method="post" asp-controller="Cart" asp-action="AddToCart">
            <input type="hidden" name="productId" value="@Model.ProductId" />
            <input type="hidden" name="productName" value="@Model.ProductName" />
            <input type="hidden" name="productPrice" value="@Model.ProductPrice" />
            <button class="btn btn-primary">Add to Cart</button>
        </form>
    </div>
</div>